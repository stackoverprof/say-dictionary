{
  "name": "say-dictionary",
  "version": "1.2.3",
  "description": "URL-based i18n with configurable languages and CLI for extracting translation keys",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "bin": {
    "say-dictionary": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "translation",
    "url-based",
    "dictionary"
  ],
  "author": "stackoverprof",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stackoverprof/say-dictionary.git"
  },
  "bugs": {
    "url": "https://github.com/stackoverprof/say-dictionary/issues"
  },
  "homepage": "https://stackoverprof.github.io/say-dictionary-site/",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^25.2.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
